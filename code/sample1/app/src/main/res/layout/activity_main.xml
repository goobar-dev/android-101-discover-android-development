<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/title_add_two_values"
      style="@style/TextAppearance.AppCompat.Display1"
      android:layout_marginBottom="32dp"
      />

  <EditText
      android:id="@+id/value1Field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="@string/hint_enter_value_1"
      android:inputType="number"
      />

  <EditText
      android:id="@+id/value2Field"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="@string/hint_enter_value_2"
      android:inputType="number"
      />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/resultButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_see_result"
      android:layout_marginTop="24dp"
      />

</LinearLayout>